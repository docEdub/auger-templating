{
    "compilerOptions": {
        "target": "ES6",
        "module": "NodeNext",
        "noResolve": false,
        "noImplicitAny": false,
        "sourceMap": true,
        "preserveConstEnums": true,
        "lib": [
            "dom",
            "es6"
        ],
        "rootDir": "src",
        "esModuleInterop": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "unitTests/**/*"
    ]
}