{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "npm run build",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run Csound with current file",
            "dependsOn": "Build",
            "type": "shell",
            "command": "csound ${relativeFile} -odac",
            // "command": "osascript -e 'tell app \"Terminal\" to do script \"cd \\\"${workspaceFolder}/.build/.output\\\" && csound ${relativeFile} -odac\"'",
            "options": {
                "cwd": "${workspaceFolder}/.build/.output"
            }
        },
        {
            "label": "Run tests",
            "type": "shell",
            "command": "npm run test",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
}
