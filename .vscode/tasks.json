{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run CMake if .build folder is gone",
            "type": "shell",
            "command": "ls .build >/dev/null 2>&1 || time npm run cmake",
            "presentation": {
                "clear": true
            },
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Build",
            "dependsOn": "Run CMake if .build folder is gone",
            "type": "shell",
            "command": "time npm run make",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run Csound with current file",
            "dependsOn": "Build",
            "type": "shell",
            "command": "csound ${relativeFile} -odac",
            // "command": "osascript -e 'tell app \"Terminal\" to do script \"cd \\\"${workspaceFolder}/.build/.root\\\" && csound ${relativeFile} -odac\"'",
            "options": {
                "cwd": "${workspaceFolder}/.build/.root"
            }
        }
    ]
}
