{
    "scripts": {
        "build": "(ls .build >/dev/null 2>&1 || npm run cmake) && npm run make",
        "configure": "(ls .build >/dev/null 2>&1 || npm run cmake) && npm run make:edit_cache",
        "reset": "npm run build:rm",
        "test": "cd CsoundTemplateHelpers && npm run test",

        "build:rm": "cmake -E rm -rf .build",
        "cmake": "cmake -B .build",
        "make": "cmake --build .build --parallel 8",
        "make:edit_cache": "make -f .build/Makefile edit_cache",
        "webpack": "cd CsoundTemplateHelpers && npm run webpack"
    }
}
